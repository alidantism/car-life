<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="life.car.AddCostRegistration.AddCostRegistrationView">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@color/colorPrimary"
        android:layout_height="30dp">

        <life.car.CustomViews.MyTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="افزودن هزینه جدید"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <life.car.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#333"
                android:text="عنوان هزینه"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:hint="-"
                android:layout_height="wrap_content" />


            <life.car.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:text="توضیحات هزینه"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#333"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/description"
                android:layout_marginTop="10dp"
                android:hint="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <life.car.CustomViews.MyTextView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textColor="#333"
                android:text="قیمت (تومان)"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/price"
                android:layout_marginTop="10dp"
                android:hint="-"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/takeImage"
                android:layout_marginTop="10dp"
                android:background="#d2d2d2"
                android:layout_width="match_parent"
                android:textColor="#333"
                android:text="انتخاب تصویر ( فاکتور، عکس مغازه)"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgTakenPic"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/save"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:text="ذخیره"
                android:textColor="#FFF"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>
